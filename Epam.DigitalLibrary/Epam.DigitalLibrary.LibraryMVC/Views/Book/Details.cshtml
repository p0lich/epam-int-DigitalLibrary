@model Epam.DigitalLibrary.LibraryMVC.Models.BookDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BookDetailsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>

        <dd class="col-sm-10">
            @foreach (var author in Model.Authors)
            {
                <h6>
                    First Name: @author.FirstName
                </h6>

                <h6>
                    Last Name: @author.LastName
                </h6>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationPlace)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationPlace)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationDate.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PagesCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PagesCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ObjectNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObjectNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    <a asp-action="GetAllBooks">Back to List</a>
</div>
